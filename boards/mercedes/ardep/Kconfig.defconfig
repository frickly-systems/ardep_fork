# ARDEP board configuration

if BOARD_ARDEP

config BOARD
	default "ardep"

config SPI_STM32_INTERRUPT
	default y
	depends on SPI

config CAN_TERMINATION_GPIO
	default y if CAN

config CAN_MAX_FILTER
	default 8

rsource "Kconfig.usb"
rsource "Kconfig.usb_dfu"

if !MCUBOOT # These options are only relevant if we build MCUBOOT
	# enable building for image slots
	config BOOTLOADER_MCUBOOT
		default y
	config FLASH_MAP
		default y

	rsource "Kconfig.uds"
endif # !MCUBOOT

config RETAINED_MEM
	default y

config RETENTION
	default y

config RETENTION_BOOT_MODE
	default y

endif # BOARD_ARDEP
