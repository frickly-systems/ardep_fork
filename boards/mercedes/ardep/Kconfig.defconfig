# ARDEP board configuration

if BOARD_ARDEP

config BOARD
	default "ardep"

config SPI_STM32_INTERRUPT
	default y
	depends on SPI

config CAN_TERMINATION_GPIO
	default y if CAN

config CAN_MAX_FILTER
	default 8

rsource "Kconfig.usb"
rsource "Kconfig.usb_dfu"

if !MCUBOOT
	# enable building for image slots
	config BOOTLOADER_MCUBOOT
		default y
	config FLASH_MAP
		default y

	rsource "Kconfig.uds"

	config MCUBOOT_SIGNATURE_KEY_FILE
		default "bootloader/mcuboot/root-rsa-2048.pem"
endif # !MCUBOOT

if MCUBOOT
	config BOOT_FIRMWARE_LOADER
		default y

	config BOOT_FIRMWARE_LOADER_BOOT_MODE
		default y

	config BOOT_FIRMWARE_LOADER_NO_APPLICATION
		default y

endif # MCUBOOT

config CONFIG_RETENTION_BOOT_MODE
	default y

endif # BOARD_ARDEP
