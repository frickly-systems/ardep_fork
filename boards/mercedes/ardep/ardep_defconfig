# enable uart driver
CONFIG_SERIAL=y

# enable GPIO
CONFIG_GPIO=y

# Enable Clocks
CONFIG_CLOCK_CONTROL=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable Segger RTT
CONFIG_USE_SEGGER_RTT=y
CONFIG_RTT_CONSOLE=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable pin controller
CONFIG_PINCTRL=y

# Default USB name, VID and PID
CONFIG_USB_DEVICE_PRODUCT="ARDEP Board"
CONFIG_USB_DEVICE_VID=0x25E1
CONFIG_USB_DEVICE_PID=0x1B1E
CONFIG_USB_DEVICE_DFU_PID=0x1B1E