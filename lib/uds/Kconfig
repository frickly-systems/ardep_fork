menuconfig UDS
    bool "UDS"
    select ISO14229
    select FLASH
    select FLASH_MAP
    imply REBOOT

if UDS 

    module = UDS
    module-str = UDS
    source "subsys/logging/Kconfig.template.log_config"

    config UDS_USE_DYNAMIC_REGISTRATION
        bool "Allow registering new event handlers at runtime"
        default n

endif # UDS