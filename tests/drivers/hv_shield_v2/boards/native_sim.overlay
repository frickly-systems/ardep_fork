
	&i2c0 {

		hv_shield0: hv_shield0@20 {
			compatible = "hv-shield-v2-custom";
			int-gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>, <&gpio0 1 GPIO_ACTIVE_HIGH>;
			reg = <0x20>;
			gpio-controller;
			#gpio-cells = <2>;
		};

		hv_shield5: hv_shield0@25 {
			compatible = "hv-shield-v2-custom";
			// int-gpios = <&test_gpio 0 0>, <&test_gpio 1 0>;
			reg = <0x25>;
			gpio-controller;
			#gpio-cells = <2>;

			zephyr,deferred-init;
		};
	};

